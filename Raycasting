/*
  This example script shows how to create a raycast in unity
*/

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class RaycastingExampleScript : MonoBehaviour {

    RaycastHit hit;

	// Update is called once per frame
	void Update () {
        Ray ray = new Ray(transform.position, transform.forward);

        if (Physics.Raycast(ray, out hit, 2f)) // This is for when the ray makes contact with another gameObject
        {
            Debug.DrawLine(ray.origin, hit.point, Color.red);
        }
        else // This is for when the ray does not make contact with another gameObject
        {
            Debug.DrawLine(ray.origin, ray.origin + ray.direction * 2f, Color.green);
        }
    }
}
